<!DOCTYPE html>
<html>
  <head>
    <title>AssociationApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class='app-title navbar navbar-expand-md navbar-light bg-dark'>
      <div class='navbar-brand text-white'>AssociationApp</div>
      <ul class='navbar-nav ml-auto'>
        <li class='nav-item'><%= link_to 'トップページ', root_path, class: 'nav-link text-white' %></li>
        <% if user_signed_in? %>
          <li class='nav-item'><p class='nav-link text-white'><%= current_user.email %></p></li>
          <li class='nav-item'><%= link_to 'ログアウト', destroy_user_session_path, class: 'nav-link text-white', method: :delete %></li>
        <% else %>
          <li class='nav-item'><%= link_to 'サインアップ', new_user_registration_path, class: 'nav-link text-white' %></li>
          <li class='nav-item'><%= link_to 'ログイン', new_user_session_path, class: 'nav-link text-white' %></li>
        <% end %>
      </ul>
    </header>
    <% if notice %>
      <p class='bg-success text-white'><%= notice %></p>
    <% elsif alert %>
      <p class='bg-danger text-white'><%= alert %></p>
    <% end %>
    <div class='container'>
      <%= yield %>
    </div>
  </body>
</html>
